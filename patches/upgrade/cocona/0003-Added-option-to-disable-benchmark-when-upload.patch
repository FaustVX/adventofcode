Subject: [PATCH 3/3] Added option to disable benchmark when `upload`

---
 .vscode/tasks.json | 14 ++++++++++++++
 1 file changed, 14 insertions(+)

diff --git a/.vscode/tasks.json b/.vscode/tasks.json
index c214007..d6e131f 100644
--- a/.vscode/tasks.json
+++ b/.vscode/tasks.json
@@ -105,6 +105,7 @@
                 "--configuration=Release",
                 "--",
                 "upload",
+                "${input:bench}",
                 "${relativeFileDirname}",
             ],
             "problemMatcher": [],
@@ -195,5 +196,18 @@
                 "description": "Current day"
             }
         },
+        {
+            "id": "bench",
+            "type": "command",
+            "command": "memento.pickString",
+            "args": {
+                "id": "bench",
+                "options": [
+                    "--no-benchmark=false",
+                    "--no-benchmark=true",
+                ],
+                "description": "Benchmark"
+            }
+        },
     ]
 }
